{
    "manifest_version": 3,
    "name": "__MSG_ExtensionName__",
    "description": "__MSG_ExtensionDesc__",
    "default_locale": "en",
    "version": "2.8.1",
    "action": {
        "default_icon": {
            "128": "src/assets/icon.png"
        },
        "default_popup": "src/popup/popup.html"
    },
    "icons": {
        "128": "src/assets/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "exclude_matches": [
                "*://passport.twitch.tv/*",
                "*://gql.twitch.tv/*"
            ],
            "all_frames" : true,
            "js": [
                "src/contentScript/twitch/twitchContentScript.tsx"
            ],
            "css": [
                "twitchContentScript.css"
            ]
        },
        {
            "matches": [
                "https://*.badgecollector.dev/mini*",
                "https://*.badgecollector.dev/replay*"
            ],
            "all_frames": true,
            "js": [
                "src/contentScript/twitch/remote/remoteContentScript.ts"
            ]
        },
        {
            "matches": [
                "*://chzzk.naver.com/*"
            ],
            "all_frames" : true,
            "js": [
                "src/contentScript/chzzk/contentScript.tsx"
            ],
            "css": [
                "chzzkContentScript.css"
            ]
        }
    ],
    "background": {
        "service_worker": "src/background/background.ts"
    },
    "permissions": [
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*.twitch.tv/*",
        "*://chzzk.naver.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/assets/icon.png",
                "src/assets/bmc-button.svg"
            ],
            "matches": [
                "*://*.twitch.tv/*"
            ]
        }
    ]
}